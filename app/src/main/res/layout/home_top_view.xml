<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_orange_light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/home_top_view_textView_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:text="武汉"
            app:drawableEndCompat="@drawable/ic_xiala" />

        <SearchView
            android:id="@+id/home_top_view_searchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:layout_toStartOf="@+id/home_top_view_textView_more"
            android:layout_toEndOf="@+id/home_top_view_textView_city" />

        <TextView
            android:id="@+id/home_top_view_textView_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawablePadding="10dp"
            android:padding="15dp"
            app:drawableEndCompat="@drawable/ic_more" />
    </RelativeLayout>

</RelativeLayout>