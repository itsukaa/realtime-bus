<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_orange_light">

    <RelativeLayout
        android:id="@+id/home_top_view_layout_titleBar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/home_top_view_textView_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:text="武汉"
            app:drawableEndCompat="@drawable/view_home_top_xiala" />

        <SearchView
            android:id="@+id/home_top_view_searchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:layout_toStartOf="@+id/home_top_view_textView_more"
            android:layout_toEndOf="@+id/home_top_view_textView_city" />

        <TextView
            android:id="@+id/home_top_view_textView_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawablePadding="10dp"
            android:padding="15dp"
            app:drawableEndCompat="@drawable/view_home_top_title_bar_more" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_top_view_layout_multiFunctions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_top_view_layout_titleBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:drawablePadding="5dp"
                    android:gravity="center_horizontal"
                    android:text="公交线路"
                    app:drawableTopCompat="@drawable/view_home_top_bus" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:drawablePadding="5dp"
                    android:gravity="center_horizontal"
                    android:text="地铁线路"
                    app:drawableTopCompat="@drawable/view_home_top_subway" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:drawablePadding="5dp"
                    android:gravity="center_horizontal"
                    android:text="站点地图"
                    app:drawableTopCompat="@drawable/view_home_top_station" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:drawablePadding="5dp"
                    android:gravity="center_horizontal"
                    android:text="更多功能"
                    app:drawableTopCompat="@drawable/view_home_top_more" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>