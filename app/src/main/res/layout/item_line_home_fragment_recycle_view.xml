<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:id="@+id/item_line_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_line_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="804路"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_line_0_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_line_name_layout">

        <TextView
            android:id="@+id/item_line_direction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/item_line_middle1"
            android:text="开往 xxx 方向" />

        <View
            android:id="@+id/item_line_middle1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/item_line_stationNum_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/item_line_middle1"
            android:gravity="center_vertical|end"
            android:text="3站 / 2分钟" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_line_1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_line_0_layout">

        <TextView
            android:id="@+id/item_line_reversed_direction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/item_line_middle2"
            android:text="开往 xxx 方向" />

        <View
            android:id="@+id/item_line_middle2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/item_line_reversed_stationNum_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/item_line_middle2"
            android:gravity="center_vertical|end"
            android:text="6站 / 13分钟" />
    </RelativeLayout>

    <TextView
        android:id="@+id/open_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_line_1_layout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="展开"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp" />
</RelativeLayout>