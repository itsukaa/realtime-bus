<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/search_edit_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <scut.carson_ho.searchview.SearchView
            android:id="@+id/search_input_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:searchBlockColor="#ffffff"
            app:searchBlockHeight="150"
            app:textColorSearch="#3F51B5"
            app:textHintSearch="搜索目的地"
            app:textSizeSearch="5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_history_location_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_edit_input_layout"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rqwewqewqe额外全额完全" />
    </RelativeLayout>

</RelativeLayout>